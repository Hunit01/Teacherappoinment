<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- REQUIRED: Internet + Network Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- DO NOT USE storage permissions anymore -->
    <!-- (We removed them intentionally) -->

    <!-- REQUIRED FOR FIREBASE AUTH -->
    <uses-permission
        android:name="com.google.android.gms.permission.AD_ID"
        tools:node="remove"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Finalproject">

        <!-- Google Play Services -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Firebase -->
        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="true" />

        <meta-data
            android:name="google_analytics_automatic_screen_reporting_enabled"
            android:value="false" />

        <!-- MAIN -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LOGIN -->
        <activity android:name=".LoginActivity" android:exported="false"/>
        <activity android:name=".RegisterActivity" android:exported="false"/>

        <!-- STUDENT -->
        <activity android:name=".StudentDashboardActivity" android:exported="false"/>
        <activity android:name=".BookAppointmentActivity" android:exported="false"/>
        <activity android:name=".ViewAppointmentsActivity" android:exported="false"/>
        <activity android:name=".SearchTeacherActivity" android:exported="false"/>
        <activity android:name=".RescheduleActivity" android:exported="false"/>
        <activity android:name=".StudentSurveyListActivity" android:exported="false"/>

        <!-- TEACHER -->
        <activity android:name=".TeacherDashboardActivity" android:exported="false"/>
        <activity android:name=".PendingRequestsActivity" android:exported="false"/>
        <activity android:name=".AllAppointmentsActivity" android:exported="false"/>
        <activity android:name=".TeacherSurveyListActivity" android:exported="false"/>

        <!-- SURVEYS -->
        <activity android:name=".SurveyActivity" android:exported="false"/>

        <!-- ADMIN -->
        <activity android:name=".AdminDashboardActivity" android:exported="false"/>
        <activity android:name=".UserListActivity" android:exported="false"/>

    </application>

</manifest>
