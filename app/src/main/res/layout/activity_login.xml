<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_greenblue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ðŸŽ“ App Logo/Title -->
        <TextView
            android:text="ðŸŽ“"
            android:textSize="72sp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- ðŸ’Ž Premium White Card Container -->
        <LinearLayout
            android:layout_width="349dp"
            android:layout_height="418dp"
            android:background="@drawable/card_auth"
            android:elevation="12dp"
            android:orientation="vertical">

            <!-- ðŸ” Login Header with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="ðŸ”"
                    android:textSize="32sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#80FFFFFF"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3"
                    android:text="Login"
                    android:textColor="#006064"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- ðŸ“§ Email Input with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_white"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:text="ðŸ“§"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textColor="#004D40"
                    android:textColorHint="#00838F"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- ðŸ”’ Password Input with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_white"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:text="ðŸ”’"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textColor="#004D40"
                    android:textColorHint="#00838F"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- ðŸš€ Login Button -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_primary"
                android:elevation="8dp"
                android:paddingVertical="16dp"
                android:text="ðŸš€ Login"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/card_auth"
            android:clickable="true"
            android:elevation="8dp"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="ðŸ“"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvRegisterLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not registered yet? Register here"
                android:textColor="#006064"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- ðŸ“ Register Link -->

    </LinearLayout>
</ScrollView>