<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸ“ Professional Survey Form -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F7FA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Header -->
                <TextView
                    android:text="ðŸ“ Teacher Feedback"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1A237E"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvSurveyTeacherName"
                    android:text="Survey for:"
                    android:textSize="17sp"
                    android:textColor="#546E7A"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="32dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Overall Rating Section -->
                <TextView
                    android:text="â­ Overall Rating"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#263238"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:layout_marginBottom="28dp"
                    android:progressTint="#FFC107"
                    android:secondaryProgressTint="#FFE082"/>

                <!-- Helpfulness Section -->
                <TextView
                    android:text="ðŸ’¡ Helpfulness"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#263238"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <RatingBar
                    android:id="@+id/helpfulBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:layout_marginBottom="28dp"
                    android:progressTint="#4CAF50"
                    android:secondaryProgressTint="#A5D6A7"/>

                <!-- Comments Section -->
                <TextView
                    android:text="ðŸ’¬ Your Comments"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#263238"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/etSurveyComment"
                    android:hint="Share your thoughts and feedback..."
                    android:textSize="16sp"
                    android:textColor="#263238"
                    android:textColorHint="#B0BEC5"
                    android:fontFamily="sans-serif"
                    android:minHeight="140dp"
                    android:gravity="top|start"
                    android:padding="18dp"
                    android:background="@drawable/rounded_white"
                    android:layout_marginBottom="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressSurvey"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Submit Button -->
                <Button
                    android:id="@+id/btnSubmitSurvey"
                    android:text="âœ… Submit Survey"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/btn_primary"
                    android:textColor="#FFFFFF"
                    android:elevation="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>