<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸ‘¨â€ðŸ« Modern Professional Teacher Dashboard -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ============================
             ðŸ  DASHBOARD SECTION
        ============================== -->
        <LinearLayout
            android:id="@+id/layoutDashboard"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ðŸŽ¨ Header -->
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_greenblue"
                android:padding="32dp"
                android:gravity="center"
                android:elevation="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- â­ TEACHER PROFILE PHOTO -->
                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="16dp">

                    <View
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="#FFFFFF"
                        android:alpha="0.3"
                        android:elevation="2dp"/>

                    <ImageView
                        android:id="@+id/teacherImgProfile"
                        android:layout_width="94dp"
                        android:layout_height="94dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_white"
                        android:scaleType="centerCrop"
                        android:padding="2dp"
                        android:elevation="4dp"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tvWelcomeTeacher"
                    android:text="Welcome, Teacher"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Manage your classes and appointments"
                    android:textSize="15sp"
                    android:textColor="#E3F2FD"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Menu Card -->
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@android:color/white"
                        android:padding="28dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Section Header -->
                        <TextView
                            android:text="ðŸŽ¯ Quick Actions"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#263238"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="24dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/btnMyProfile"
                            android:text="ðŸ‘¤ My Profile"
                            android:textColor="#FFFFFF"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:fontFamily="sans-serif-medium"
                            android:background="@drawable/btn_primary"
                            android:elevation="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_marginBottom="14dp"/>

                        <Button
                            android:id="@+id/btnViewAllAppointments"
                            android:text="ðŸ“‹ All Appointments"
                            android:textColor="#FFFFFF"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:fontFamily="sans-serif-medium"
                            android:background="@drawable/btn_primary"
                            android:elevation="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_marginBottom="14dp"/>

                        <Button
                            android:id="@+id/btnViewSurveys"
                            android:text="ðŸ“ View Surveys"
                            android:textColor="#FFFFFF"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:fontFamily="sans-serif-medium"
                            android:background="@drawable/btn_primary"
                            android:elevation="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_marginBottom="20dp"/>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#ECEFF1"
                            android:layout_marginBottom="20dp"/>

                        <Button
                            android:id="@+id/btnLogoutTeacher"
                            android:text="ðŸšª Logout"
                            android:textColor="#D32F2F"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:fontFamily="sans-serif-medium"
                            android:background="@drawable/rounded_white"
                            android:elevation="1dp"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>


        <!-- ============================
             ðŸ“ PROFILE SECTION
        ============================== -->
        <LinearLayout
            android:id="@+id/layoutProfile"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:padding="28dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="ðŸ“ My Profile"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1A237E"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <!-- â­ Teacher Photo -->
                    <FrameLayout
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:background="@drawable/circle_white"
                            android:backgroundTint="#E3F2FD"
                            android:elevation="2dp"/>

                        <ImageView
                            android:id="@+id/editTeacherProfileImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_white"
                            android:scaleType="centerCrop"
                            android:padding="3dp"
                            android:elevation="4dp"/>
                    </FrameLayout>

                    <!-- Change Photo Button -->
                    <Button
                        android:id="@+id/btnTeacherChangePhoto"
                        android:text="ðŸ“· Change Photo"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:background="@drawable/btn_primary"
                        android:textColor="#FFFFFF"
                        android:elevation="2dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="24dp"/>

                    <!-- Form Fields -->
                    <TextView
                        android:text="ðŸ‘¤ Name"
                        android:textSize="14sp"
                        android:textColor="#546E7A"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/etName"
                        android:hint="Enter your name"
                        android:textColor="#263238"
                        android:textColorHint="#B0BEC5"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:background="@drawable/rounded_white"
                        android:padding="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:text="ðŸ“š Subject"
                        android:textSize="14sp"
                        android:textColor="#546E7A"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/etSubject"
                        android:hint="Enter your subject"
                        android:textColor="#263238"
                        android:textColorHint="#B0BEC5"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:background="@drawable/rounded_white"
                        android:padding="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:text="ðŸ“ž Phone"
                        android:textSize="14sp"
                        android:textColor="#546E7A"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/etPhone"
                        android:hint="Enter your phone number"
                        android:inputType="phone"
                        android:textColor="#263238"
                        android:textColorHint="#B0BEC5"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:background="@drawable/rounded_white"
                        android:padding="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:text="ðŸŽ“ Qualification"
                        android:textSize="14sp"
                        android:textColor="#546E7A"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/etQualification"
                        android:hint="Enter your qualification"
                        android:textColor="#263238"
                        android:textColorHint="#B0BEC5"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:background="@drawable/rounded_white"
                        android:padding="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:text="ðŸ’¼ Experience"
                        android:textSize="14sp"
                        android:textColor="#546E7A"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/etExperience"
                        android:hint="Years of experience"
                        android:textColor="#263238"
                        android:textColorHint="#B0BEC5"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:background="@drawable/rounded_white"
                        android:padding="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:text="ðŸ“„ Description"
                        android:textSize="14sp"
                        android:textColor="#546E7A"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/etDescription"
                        android:hint="Brief description about yourself"
                        android:minLines="4"
                        android:gravity="top"
                        android:textColor="#263238"
                        android:textColorHint="#B0BEC5"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:background="@drawable/rounded_white"
                        android:padding="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"/>

                    <Button
                        android:id="@+id/btnSaveProfile"
                        android:text="ðŸ’¾ Save Profile"
                        android:textColor="#FFFFFF"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-medium"
                        android:background="@drawable/btn_primary"
                        android:elevation="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tvSaveStatus"
                        android:text="ðŸ’¡ Tap Save to update your profile"
                        android:textSize="14sp"
                        android:textColor="#78909C"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/btnBackDashboard"
                        android:text="â¬…ï¸ Back to Dashboard"
                        android:textColor="#546E7A"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-medium"
                        android:background="@drawable/rounded_white"
                        android:elevation="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>