<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸ‘¨â€ðŸ« Modern Teacher Dashboard ðŸ“Š -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_greenblue"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ============================
             ðŸ  DASHBOARD SECTION
        ============================== -->
        <LinearLayout
            android:id="@+id/layoutDashboard"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ðŸŽ¨ Header -->
            <LinearLayout
                android:orientation="vertical"
                android:padding="28dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- â­ TEACHER PROFILE PHOTO -->
                <ImageView
                    android:id="@+id/teacherImgProfile"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/circle_white"
                    android:scaleType="centerCrop"
                    android:padding="3dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvWelcomeTeacher"
                    android:text="Welcome, Teacher"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Menu Card -->
            <LinearLayout
                android:orientation="vertical"
                android:background="#F3F4F6"
            android:elevation="12dp"
            android:padding="24dp"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnMyProfile"
                android:text="ðŸ‘¤ My Profile"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/btn_primary"
                android:elevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="14dp"/>

            <Button
                android:id="@+id/btnViewAllAppointments"
                android:text="ðŸ“‹ All Appointments"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/btn_primary"
                android:elevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="14dp"/>

            <Button
                android:id="@+id/btnViewSurveys"
                android:text="ðŸ“ View Surveys"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/btn_primary"
                android:elevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="14dp" />

            <Button
                android:id="@+id/btnLogoutTeacher"
                android:text="ðŸšª Logout"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/btn_primary"
                android:elevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"/>
        </LinearLayout>

    </LinearLayout>


    <!-- ============================
         ðŸ“ PROFILE SECTION
    ============================== -->
    <LinearLayout
        android:id="@+id/layoutProfile"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#F3F4F6"
    android:elevation="12dp"
    android:padding="24dp"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="ðŸ“ My Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2B2B2B"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- â­ Teacher Photo -->
    <ImageView
        android:id="@+id/editTeacherProfileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circle_white"
        android:scaleType="centerCrop"
        android:padding="4dp"
        android:layout_marginBottom="10dp" />

    <!-- Change Photo Button -->
    <Button
        android:id="@+id/btnTeacherChangePhoto"
        android:text="Change Photo"
        android:textAllCaps="false"
        android:background="@drawable/btn_primary"
        android:textColor="#FFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etName"
        android:hint="ðŸ‘¤ Name"
        android:textColor="#2B2B2B"
        android:textColorHint="#9E9E9E"
        android:background="@drawable/rounded_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/etSubject"
        android:hint="ðŸ“š Subject"
        android:textColor="#2B2B2B"
        android:textColorHint="#9E9E9E"
        android:background="@drawable/rounded_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/etPhone"
        android:hint="ðŸ“ž Phone"
        android:inputType="phone"
        android:textColor="#2B2B2B"
        android:textColorHint="#9E9E9E"
        android:background="@drawable/rounded_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/etQualification"
        android:hint="ðŸŽ“ Qualification"
        android:textColor="#2B2B2B"
        android:textColorHint="#9E9E9E"
        android:background="@drawable/rounded_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/etExperience"
        android:hint="ðŸ’¼ Experience"
        android:textColor="#2B2B2B"
        android:textColorHint="#9E9E9E"
        android:background="@drawable/rounded_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/etDescription"
        android:hint="ðŸ“„ Description"
        android:minLines="3"
        android:gravity="top"
        android:textColor="#2B2B2B"
        android:textColorHint="#9E9E9E"
        android:background="@drawable/rounded_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnSaveProfile"
        android:text="ðŸ’¾ Save Profile"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/btn_primary"
        android:elevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/tvSaveStatus"
        android:text="ðŸ’¡ Tap Save to update your profile"
        android:textSize="13sp"
        android:textColor="#757575"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnBackDashboard"
        android:text="â¬…ï¸ Back to Dashboard"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/btn_primary"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

</LinearLayout>

    </LinearLayout>

    </ScrollView>
